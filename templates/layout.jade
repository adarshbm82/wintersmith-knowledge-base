doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title= locals.title
    link(rel='shortcut icon', href='/images/dobt_logo.png')
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Open+Sans:400,300,700,600')
    link(rel='stylesheet', href='/styles/based.css')
    link(rel='stylesheet', href='/styles/knowledge_base.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/js/main.js')
  body
  - var route = locals.page.filename.split('/')
  - var cur_dir = route.slice(0,2).join('/')
    block nav
      .navbar
        .navbar-left
          a(href='/')
            img(src='/images/dobt_logo.png')
            span.brand DOBT
              span.gray  | Knowledge Base
        .navbar-right
          form(action='/search', method='get').navbar-form
            input(type='search', name='q', placeholder='Search articles')
          if cur_dir.toLowerCase().search('screendoor') > -1
            - back_to = "Screendoor"
            - var back_to_link = 'https://screendoor.dobt.co/'
          else
            - back_to = "Dashboard"
            - var back_to_link = 'https://dashboard.dobt.co/'
          a(href!=back_to_link)!= "Back to " + back_to + "&nbsp;&rarr;"
    div.container
      block content
    footer
      .items.grid
        .item.lap_three_columns.service-status
          h2 Links
          ul
            li: a(href='http://status.dobt.co')
              span.status.loading Service Status
              span.status.up(style='display:none;')
                i.fa.fa-check
                | Everything is up!
              span.status.partial(style='display:none;')
                i.fa.fa-times
                | Partial service outage
              span.status.major(style='display:none;')
                i.fa.fa-times
                | Major service outage
            li: a(href='http://blog.dobt.co') Blog
            li: a(href='https://dashboard.dobt.co/privacy') Privacy
            li: a(href='https://dashboard.dobt.co') Customer Dashboard
        .item.lap_three_columns.social
          h2 Social
          ul
            li: a.fb(href='https://www.facebook.com/dobtco')
              i.fa.fa-facebook
              | Facebook
            li: a.tw(href='https://twitter.com/dobtco')
              i.fa.fa-twitter
              | Twitter
            li: a.gp(href='https://plus.google.com/+DobtCo/')
              i.fa.fa-google-plus
              | Google+
        .item.lap_three_columns.contact
          h2 Contact
          ul
            li: a.tf(href='tel:+18772943628')
              i.fa.fa-phone
              | +1 (877) 294 - DOBT (Toll Free)
            li: a.local(href='tel:+14049751962')
              i.fa.fa-phone
              | +1 (404) 975 - 1962 (Local)
            li: a.email(id='dynamic-email')
              i.fa.fa-envelope
